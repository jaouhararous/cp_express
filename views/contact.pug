extends layout

block content
  h1(style="color: #333; font-size: 24px;") Contact Batman
  p(style="color: #666; font-size: 16px;") If you have any questions or need assistance, please feel free to contact Batman using the form below.

  form(action="/contact", method="POST", style="margin-top: 20px;")
    div(style="margin-bottom: 10px;")
      label(for="name", style="display: block; font-weight: bold;") Name:
      input(type="text", id="name", name="name", style="width: 50%; padding: 5px;")
    div(style="margin-bottom: 10px;")
      label(for="email", style="display: block; font-weight: bold;") Email:
      input(type="email", id="email", name="email", style="width: 50%; padding: 5px;")
    div(style="margin-bottom: 10px;")
      label(for="message", style="display: block; font-weight: bold;") Message:
      textarea(id="message", name="message", rows="5", style="width: 50%; padding: 5px;")
    div
      button(type="submit", style="background-color: #333; color: #fff; padding: 10px 20px; border: none; cursor: pointer;") Send Message
